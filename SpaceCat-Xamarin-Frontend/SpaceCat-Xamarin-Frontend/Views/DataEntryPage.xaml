<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SpaceCat_Xamarin_Frontend"
             x:Class="SpaceCat_Xamarin_Frontend.DataEntryPage">


    <ContentPage.BindingContext>
        <local:DataEntryViewModel/>
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <StackLayout Orientation="Horizontal">
            
            <!-- COUNTER BUTTONS -->
            <Frame>
                <StackLayout VerticalOptions="Center">
                    <Button Text="Add"/>
                    <Button Text="Minus"/>
                </StackLayout>
            </Frame>

            <!-- MAP -->
            <Frame HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <AbsoluteLayout>
                    <BoxView BackgroundColor="AliceBlue" WidthRequest="700" HeightRequest="500"/>
                </AbsoluteLayout>
            </Frame>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>