<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SpaceCat_Xamarin_Frontend"
             x:Class="SpaceCat_Xamarin_Frontend.MapCreationPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="frame-tools-main" TargetType="Frame" BasedOn="{StaticResource frame-exterior}">
                <Setter Property="WidthRequest" Value="200"/>
            </Style>
            <Style x:Key="label-tools-title" TargetType="Label" BasedOn="{StaticResource label-medium}">
                <Setter Property="TextDecorations" Value="Underline"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Padding" Value="10"/>
            </Style>
            <Style x:Key="button-tools" TargetType="Button" BasedOn="{StaticResource button-small}">
                <Setter Property="HeightRequest" Value="60"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <local:MapCreationViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Frame Style="{StaticResource frame-main}">
            <StackLayout Orientation="Horizontal">
            
            
                <!-- TOOLS -->
                <StackLayout>
                    <Frame Style="{StaticResource frame-tools-main}">
                        <StackLayout>
                            <!-- AREA TOOLS -->
                            <Frame Style="{StaticResource frame-interior}">
                                <StackLayout>
                                    <Label Text="AREA TOOLS" Style="{StaticResource label-tools-title}"/>
                                    <Grid>
                                        <Button Text="New Area" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource button-tools}"/>
                                        <Button Text="Delete &#x0a;Area" Grid.Row="1" Grid.Column="0" Style="{StaticResource button-tools}"/>
                                        <Button Text="Add to &#x0a;Area" Grid.Row="1" Grid.Column="1" Style="{StaticResource button-tools}"/>
                                    </Grid>
                                </StackLayout>
                            </Frame>

                            <!-- FURNITURE TOOLS -->
                            <Frame VerticalOptions="FillAndExpand" Style="{StaticResource frame-interior}">
                                <StackLayout>
                                    <Label Text="FURNITURE" Style="{StaticResource label-tools-title}"/>
                                    <Grid>
                                        <Button Grid.Row="0" Grid.Column="0" Text="Add New &#x0a;Furniture" Style="{StaticResource button-tools}"/>
                                        <Button Grid.Row="0" Grid.Column="1" Text="See All" Style="{StaticResource button-tools}"/>
                                    </Grid>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </Frame>


                    <!-- MAIN BUTTONS -->
                    <StackLayout VerticalOptions="End">
                        <Button Text="Map Settings" Command="{Binding TapMapSettings}" Style="{StaticResource button-big}"/>
                        <Button Text="Save &amp; Exit" Command="{Binding TapSaveExit}" Style="{StaticResource button-big}"/>
                    </StackLayout>
                </StackLayout>


                <!-- MAP -->
                <Frame HorizontalOptions="FillAndExpand" Style="{StaticResource frame-exterior}">
                    <AbsoluteLayout>
                        <!-- TODO: need to see how it behaves with image -->
                        <BoxView Color="Purple"
                                AbsoluteLayout.LayoutBounds="0.5,0.5,900,725"
                                AbsoluteLayout.LayoutFlags="PositionProportional" />
                        <Label Text="Centered text"
                                AbsoluteLayout.LayoutBounds="0.5,0.5,110,25"
                                AbsoluteLayout.LayoutFlags="PositionProportional" />
                    </AbsoluteLayout>
                </Frame>
            
            
            
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>